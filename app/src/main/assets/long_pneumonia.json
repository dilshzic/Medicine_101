                "content": [
                  { "type": "table", "tableHeaders": ["Feature", "Lobar Pneumonia", "Bronchopneumonia"], "tableRows": [
                    ["Symptoms", "Fever, cough, sputum, chest pain present", "Fever, cough, sputum (Severe features)"],
                    ["Signs", "Consolidation", "Bilateral crepitations and rhonchi"],
                    ["CXR", "Patch of consolidation", "Multiple small patchy shadowing"]
                  ]}
                ]
              },
              {
                "title": "Bacterial (Typical) vs Atypical",
                "content": [
                  { "type": "table", "tableHeaders": ["Feature", "Bacterial (Pneumococcal)", "Atypical (Mycoplasma)"], "tableRows": [
                    ["Onset", "Very Acute", "Acute"],
                    ["Fever", "High fever with chills", "Mild to Moderate"],
                    ["Cough", "Productive (Rusty/Purulent)", "Dry (appears days later)"],
                    ["Pleuritic Pain", "Common", "Uncommon"],
                    ["Signs", "Consolidation", "Minimal (few crepitations)"],
                    ["Extra-pulmonary", "Uncommon", "Common (Arthritis, Erythema Multiforme)"],
                    ["WBC", "Neutrophil Leukocytosis", "Normal or Low"],
                    ["CXR", "Lobar Consolidation", "Interstitial Shadowing"]
                  ]}
                ]
              },
              {
                "title": "Clues to Specific Organisms",
                "content": [
                  { "type": "list", "items": [
                    { "text": "Streptococcus: Most common CAP, associated with Herpes Labialis." },
                    { "text": "Mycoplasma: Epidemics, young adults, prodrome (headache), extra-pulmonary signs (hemolysis, rashes)." },
                    { "text": "Haemophilus influenzae: Post-influenza, COPD patients." },
                    { "text": "Staphylococcus aureus: Post-influenza, IV drug users, severe." },
                    { "text": "Legionella: Institutional outbreaks (AC systems), hyponatremia, confusion, diarrhoea." },
                    { "text": "Pneumocystis carinii (PCP): AIDS, Transplant, Chemotherapy." },
                    { "text": "Klebsiella: Alcoholics, red currant jelly sputum." }
                  ]}
                ]
              }
            ]
          },
          {
            "type": "header",
            "text": "Assessing Severity (CURB-65)",
            "level": 2
          },
          {
            "type": "list",
            "items": [
              { "text": "C: Confusion" },
              { "text": "U: Urea > 7 mmol/L" },
              { "text": "R: Respiratory Rate > 30/min" },
              { "text": "B: Blood Pressure (Sys <90 or Dia <60)" },
              { "text": "65: Age > 65 years" },
              { "text": "Score >= 3 indicates Severe Pneumonia." }
            ]
          }
        ]
