            "level": 2
          },
          {
            "type": "list",
            "items": [
              { "text": "Bleeding Disorders: Haemophilia, Thrombocytopenia, Von Willebrand disease." },
              { "text": "Drugs: NSAIDs, Aspirin, Steroids, Anticoagulant therapy." },
              { "text": "Uraemia" },
              { "text": "Hereditary Haemorrhagic Telangiectasia" }
            ]
          }
        ]
