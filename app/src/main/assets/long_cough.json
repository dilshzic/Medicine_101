          {
            "type": "header",
            "text": "Risk Factors",
            "level": 2
          },
          {
            "type": "list",
            "items": [
              { "text": "Smoking: COPD, Bronchial Carcinoma." },
              { "text": "Occupational: Pneumoconiosis (Silica, Asbestos), Farmers (Extrinsic Allergic Alveolitis)." },
              { "text": "Drugs: ACE Inhibitors, Amiodarone/Methotrexate (Fibrosis)." },
              { "text": "Past Hx: Childhood pneumonia/TB (Bronchiectasis risk)." }
            ]
          }
        ]
      },
