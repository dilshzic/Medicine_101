    ],
    "tableRows": [
      [
        "Mitral Regurgitation",
        "Marfanoid features"
      ],
      [
        "Pleural Effusion",
        "Clubbing, Yellow Nail Syndrome"
      ],
      [
        "Tender Hepatomegaly",
        "Icterus (Hepatitis)"
      ],
      [
        "Cord Compression",
        "Neurofibromatosis"
      ],
      [
        "Infective Endocarditis",
        "Fever, Splinter Hemorrhages, Osler Nodes"
      ]
    ]
  },
  {
    "type": "header",
